					<div class="titleds2">
						<span>Hair Solution</span>
					</div>
					<div class="clear height-15"></div>
					<div class="bck-collction"><a href="{{ url('hair_salon/solution', {'id' : '1', 'category': data.category, 'title' : data.title }) }}">Back to Hair Solution</a></div>
				</div>

				<div class="clear"></div>
			</div>
			{# -------- End Inset detail collection -------- #}

			<div class="clear"></div>
		</div>
		{# End inner text col #}

		<div class="clear"></div>
	</div>
{# end container #}
<script type="text/javascript">
	$(window).resize(function() {
	    var newWindowHeight = $(window).height();
	    if (newWindowHeight > 768){
	    	$('.col-big-picture-middle img').css('height', newWindowHeight+'px');
	    }
	});
	$(window).load(function() {
	    var newWindowHeight = $(window).height();
	    if (newWindowHeight > 768){
	    	$('.col-big-picture-middle img').css('height', newWindowHeight+'px');
	    }
	});
</script>
<style type="text/css">
	.bck-collction a{
		color: #8D8D8D;
		font-size: 14px;
		text-decoration: underline;
	}
	.bck-collction a:hover,
	.bck-collction a:focus{
		color: #8D8D8D;
		text-decoration: none;
	}
</style>
{% endblock %}