{% extends layout %}
{% block title %}Our Solution {% if data.category %}- {{ data.category|capitalize }}{% endif %} - Gester - Hair Salon{% endblock %}
{% block menu %}homepage{% endblock %}
{% block content %}
	<div class="right-panel back-ins-collection-outer">
		
		{# inner text col #}
